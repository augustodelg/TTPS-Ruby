<% content_for :css do %>
<style type="text/css">
  body {
   background: #6d7fcc !important;
  }
</style>
<% end %>

<div class="text-center container-sm mx-auto p-5 m-2" style="width: 24em;">
  <h1 class="title" style="color: white; font-size: 55px ">MY NOTES</h1>
</div>
<div class="box container-sm mx-auto p-5 m-2" style="max-width: 24em; width: auto;">

  <h2 class="title">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, :class => "form-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control", :type => "email" %>
    </div>

    <div class="field">
      <%= f.label :password , :class => "form-label"%><br />
      <%= f.password_field :password, autocomplete: "current-password", :class => "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", :class => "btn btn-dark btn-block"%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>